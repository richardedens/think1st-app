<!DOCTYPE html>
<html lang="en">
	<head>
		{% include "components/head.twig" %}
	</head>

	<body
		data-layout-mode="two-column" data-layout='{"mode": "light", "width": "fluid", "menuPosition": "fixed", "sidebar": { "color": "light", "size": "default", "showuser": false}, "topbar": {"color": "light"}, "showRightSidebarOnPageLoad": false}'>

		<!-- Begin page -->
		<div
			id="wrapper">

			<!-- ========== Topbar Start ========== -->
			{% include "components/navigation-custom.twig" %}
			<!-- End Topbar -->

			<!-- ========== Left Sidebar Start ========== -->
			{% include "components/left-menu.twig" %}
			<!-- End Sidebar -->

			<!-- ========== Content ========== -->
				<div class="content-page"> <div
					class="content">


					<!-- Start Content-->
					<div
						class="container-fluid">

						<!-- start page title -->
						<div class="row">
							<div class="col-12">
								<div class="page-title-box">
									<div class="page-title-right">
										<ol class="breadcrumb m-0">
											<li class="breadcrumb-item">
												<a href="javascript: void(0);">Think1st</a>
											</li>
											<li class="breadcrumb-item">
												<a href="javascript: void(0);">Apps</a>
											</li>
											<li class="breadcrumb-item active">Projects</li>
										</ol>
									</div>
									<h4 class="page-title">Projects</h4>
								</div>
							</div>
						</div>
						<!-- end page title -->

						<div class="row mb-2">
							<div class="col-sm-4">
								<a href="/project-create" class="btn btn-danger btn-rounded waves-effect waves-light mb-3">
									<i class="mdi mdi-plus"></i>
									Create Project</a>
							</div>
							<div class="col-sm-8">
								<div class="text-sm-right">
									<div class="btn-group mb-3">
										<button type="button" class="btn btn-primary">All</button>
									</div>
									<div class="btn-group mb-3 ml-1">
										<button type="button" class="btn btn-light">Ongoing</button>
										<button type="button" class="btn btn-light">Finished</button>
									</div>
									<div class="btn-group mb-3 ml-2 d-none d-sm-inline-block">
										<button type="button" class="btn btn-dark">
											<i class="mdi mdi-apps"></i>
										</button>
									</div>
									<div class="btn-group mb-3 d-none d-sm-inline-block">
										<button type="button" class="btn btn-link text-dark">
											<i class="mdi mdi-format-list-bulleted-type"></i>
										</button>
									</div>
								</div>
							</div>
							<!-- end col-->
						</div>
						<!-- end row-->

						<div class="row">
							{% for project in projects %}
							<div class="col-lg-4">
								
								<div class="card-box project-box">
									<div class="dropdown float-right">
										<a href="#" class="dropdown-toggle card-drop arrow-none" data-toggle="dropdown" aria-expanded="false">
											<i class="mdi mdi-dots-horizontal m-0 text-muted h3"></i>
										</a>
										<div class="dropdown-menu dropdown-menu-right">
											<a class="dropdown-item" href="/mindmap/{{ project }}">Mindmap</a>
											<a class="dropdown-item" href="/architect/{{ project }}">Architect</a>
											<a class="dropdown-item" href="/project-cloud-architecture/{{ project }}">Cloud Architect</a>
											<a class="dropdown-item" href="/kanbanboard/{{ project }}">Board</a>
											<a class="dropdown-item" href="/project-edit/{{ project }}">Edit</a>
											<a class="dropdown-item" href="/project-design/{{ project }}">Design</a>
											<a class="dropdown-item" href="/project-settings/{{ project }}">Settings</a>
											<a class="dropdown-item" style="color: red;" href="/project-delete/{{ project }}">Delete</a>
										</div>
									</div>
									<!-- end dropdown -->
									<!-- Title-->
									<h4 class="mt-0">
										<a href="/project-detail/{{ project }}" class="text-dark">{{ project }}</a>
									</h4>
									<p class="text-muted text-uppercase">
										<i class="mdi mdi-account-circle"></i>
										<small>Orange Limited</small>
									</p>
									<div class="badge bg-soft-success text-success mb-3">Finished</div>
									<!-- Desc-->
									<p class="text-muted font-13 mb-3 sp-line-2">With supporting text below as a natural lead-in to additional contenposuere erat a
										                                        ante...<a href="javascript:void(0);" class="font-weight-bold text-muted">view more</a>
									</p>
									<!-- Task info-->
									<p class="mb-1">
										<span class="pr-2 text-nowrap mb-2 d-inline-block">
											<i class="mdi mdi-format-list-bulleted-type text-muted"></i>
											<b>78</b>
											Tasks
										</span>
										<span class="text-nowrap mb-2 d-inline-block">
											<i class="mdi mdi-comment-multiple-outline text-muted"></i>
											<b>214</b>
											Comments
										</span>
									</p>
									<!-- Team-->
									<div class="avatar-group mb-3">
										<a href="javascript: void(0);" class="avatar-group-item" data-toggle="tooltip" data-placement="top" title="" data-original-title="Mat Helme">
											<img src="/assets/images/users/user-1.jpg" class="rounded-circle avatar-sm" alt="friend"/>
										</a>

										<a href="javascript: void(0);" class="avatar-group-item" data-toggle="tooltip" data-placement="top" title="" data-original-title="Michael Zenaty">
											<img src="/assets/images/users/user-2.jpg" class="rounded-circle avatar-sm" alt="friend"/>
										</a>

										<a href="javascript: void(0);" class="avatar-group-item" data-toggle="tooltip" data-placement="top" title="" data-original-title="James Anderson">
											<img src="/assets/images/users/user-3.jpg" class="rounded-circle avatar-sm" alt="friend"/>
										</a>

										<a href="javascript: void(0);" class="avatar-group-item" data-toggle="tooltip" data-placement="top" title="" data-original-title="Mat Helme">
											<img src="/assets/images/users/user-4.jpg" class="rounded-circle avatar-sm" alt="friend"/>
										</a>

										<a href="javascript: void(0);" class="avatar-group-item" data-toggle="tooltip" data-placement="top" title="" data-original-title="Username">
											<img src="/assets/images/users/user-5.jpg" class="rounded-circle avatar-sm" alt="friend"/>
										</a>
									</div>
									<!-- Progress-->
									<p class="mb-2 font-weight-semibold">Task completed:
										<span class="float-right">28/78</span>
									</p>
									<div class="progress mb-1" style="height: 7px;">
										<div class="progress-bar" role="progressbar" aria-valuenow="34" aria-valuemin="0" aria-valuemax="100" style="width: 34%;"></div>
										<!-- /.progress-bar .progress-bar-danger -->
									</div>
									<!-- /.progress .no-rounded -->

								</div>
							</div>
							{% endfor %}
						</div>
						<!-- end row -->

					</div>
					<!-- container -->

					<!-- Footer Start -->
					{% include "components/footer.twig" %}
					<!-- end Footer -->
				</div>
			</div>
			<!-- End Content -->

			<!-- ========== Right Sidebar Start ========== -->
			{% include "components/menus/right-menu.twig" %}<!-- End Right Sidebar -->

			<!-- ========== Right Overlay ========== --><div class="rightbar-overlay"> </div>
			<!-- End Right Overlay -->

			{% include "components/scripts.twig" %}
		</div>

	</body>
</html>
